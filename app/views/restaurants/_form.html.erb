<%= simple_form_for(restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Your name here...' %>
    <%= f.input :address, placeholder: 'Your address here...' %>
    <%= f.input :category, collection: %w(chinese italian japanese french belgian), selected: 'chinese' %>
    <%= f.input :phone_number, placeholder: 'Your phone number here...'%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-outline-success' %>
  </div>
<% end %>